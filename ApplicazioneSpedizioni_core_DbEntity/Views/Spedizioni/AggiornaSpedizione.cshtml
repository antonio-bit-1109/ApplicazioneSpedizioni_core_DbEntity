@model ApplicazioneSpedizioni_core_DbEntity.Models.StatoSpedizione

@{
    ViewData["Title"] = "AggiornaSpedizione";
}

<h1>AggiornaSpedizione</h1>

<h4>StatoSpedizione</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AggiornaSpedizione">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group my-3">
                <label asp-for="StatusSpedizione" class="control-label"></label>
                @* <input asp-for="StatusSpedizione" class="form-control" /> *@
                <select asp-for="StatusSpedizione">
                    <option value="In transito">In Transito</option>
                    <option value="In Consegna">In Consegna</option>
                    <option value="Consegnato">Consegnato</option>
                    <option value="Non Consegnato">Non Consegnato</option>
                </select>
                <span asp-validation-for="StatusSpedizione" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LuogoGiacenzaPacco" class="control-label"></label>
               @*  <input asp-for="LuogoGiacenzaPacco" class="form-control" /> *@
                <select asp-for="LuogoGiacenzaPacco">
                    <option value="Palermo">Palermo</option>
                    <option value="Napoli">Napoli</option>
                    <option value="Firenze">Firenze</option>
                    <option value="Milano">Milano</option>
                </select>
                <span asp-validation-for="LuogoGiacenzaPacco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descrizione" class="control-label"></label>
                <input asp-for="Descrizione" class="form-control" />
                <span asp-validation-for="Descrizione" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataAggiornamento" class="control-label"></label>
                <input type="date" asp-for="DataAggiornamento" class="form-control" />
                <span asp-validation-for="DataAggiornamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdSpedizione" class="control-label"></label>
                <input class="form-control" asp-for="IdSpedizione" value="@TempData["IdSpedizione"]" />
                <span asp-validation-for="IdSpedizione" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

